<idea-plugin>
    <id>pyGradleConfig.pyGradleConfig</id>
    <name>Python Gradle</name>
    <vendor email="cjsimpson@gmail.com" url="http://www.github.com/cjsimpson">Chris Simpson</vendor>
    <description>Support for Configuring Python via Gradle</description>

    <depends>org.jetbrains.plugins.gradle</depends>
    <depends>com.intellij.modules.python</depends>

    <extensions defaultExtensionNs="org.jetbrains.plugins.gradle">
        <projectResolve implementation="com.github.cjsimpson.idea.PythonGradleProjectResolverExtension"/>
        <projectResolve implementation="com.github.cjsimpson.idea.PythonSdkGradleProjectResolverExtension"/>
    </extensions>

    <extensions defaultExtensionNs="com.intellij">
        <externalProjectDataService implementation="com.github.cjsimpson.idea.PythonGradleDataService"/>
        <externalProjectDataService implementation="com.github.cjsimpson.idea.PythonSdkGradleDataService"/>
    </extensions>

</idea-plugin>